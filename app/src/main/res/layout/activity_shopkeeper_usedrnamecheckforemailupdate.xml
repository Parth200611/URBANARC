<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".ShopkeeperUsedrnamecheckforemailupdateActivity">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ivSplashapplogo"
        android:src="@drawable/applogo"
        android:layout_marginTop="35dp"
        android:layout_marginStart="90dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSplashtitle"
        android:text="URBANARC"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/tvSplashSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Making Space Livable"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/tvSplashtitle"
        android:layout_marginStart="170dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvSplashtitle"
        android:layout_marginTop="60dp"
        app:contentPaddingRight="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Email"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enetr your username to verify user after that you can easily update your email address or add new email"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:hint="Username(ex-Parth@1234)"
                android:padding="10dp"
                android:layout_margin="30dp"
                android:id="@+id/etShopkeeperCheckusernameforemailUsername"
                android:inputType="text"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="verify"
                android:textColor="@color/white"
                android:background="@color/yellow"
                android:layout_marginTop="330dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:id="@+id/btnShopkeepercheckusernameforemailVerify"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>