<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".User.userupdatepasswordActivity">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ivSplashapplogo"
            android:src="@drawable/applogo"
            android:layout_marginTop="65dp"
            android:layout_marginStart="90dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSplashtitle"
            android:text="URBANARC"
            android:textSize="26sp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="70dp"
            android:textStyle="bold"
            android:textColor="@color/white"

            />
        <TextView
            android:id="@+id/tvSplashSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Making Space Livable"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/tvSplashtitle"
            android:layout_marginStart="170dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvSplashtitle"
            android:layout_marginTop="60dp"
            app:contentPaddingRight="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Password"
                    android:textSize="26sp"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update your password now for enhanced security. A strong password can help protect your personal information from unauthorized access"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="50dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:hint="New Password"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:inputType="textPassword"
                    android:background="@drawable/shape"
                    android:padding="10dp"
                    android:id="@+id/etUserupdatepasswordnewpassword"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:hint="Confirm Password"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:background="@drawable/shape"
                    android:padding="10dp"
                    android:id="@+id/etUserupdatepasswordConfirmpassword"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/yellow"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:id="@+id/btnUserupdatepasswordnext"
                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>



</RelativeLayout>