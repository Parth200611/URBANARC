<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".userEditprofilActivity">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ivSplashapplogo"
        android:src="@drawable/applogo"
        android:layout_marginTop="35dp"
        android:layout_marginStart="90dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSplashtitle"
        android:text="URBANARC"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/tvSplashSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Making Space Livable"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/tvSplashtitle"
        android:layout_marginStart="170dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvSplashtitle"
        android:layout_marginTop="60dp"
        app:contentPaddingRight="5dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE ACCOUNT INFORMATION"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can update your email address or change your password here.
For your security, please ensure that you use a strong password and a valid email address."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:id="@+id/cvUserEditprofilEditemail"
            app:cardCornerRadius="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Click Here To Update Email"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textColor="@color/blue"
                android:drawableLeft="@drawable/baseline_alternate_email_24"
                android:drawablePadding="5dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:id="@+id/cvUserEditprofilEditpassword"
            app:cardCornerRadius="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Click Here To Update Password"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textColor="@color/blue"
                android:drawableLeft="@drawable/baseline_lock_open_24"
                android:drawablePadding="5dp"
                />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>