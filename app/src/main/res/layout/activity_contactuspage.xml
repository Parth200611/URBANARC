<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".User.ContactuspageActivity">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ivSplashapplogo"
        android:src="@drawable/applogo"
        android:layout_marginTop="35dp"
        android:layout_marginStart="90dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSplashtitle"
        android:text="URBANARC"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/tvSplashSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Making Space Livable"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/tvSplashtitle"
        android:layout_marginStart="170dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvSplashtitle"
        android:layout_marginTop="60dp"
        app:contentPaddingRight="5dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="26sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you have any questions or need further assistance, feel free to reach out to us. We're here to help you find the perfect shoes!"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:id="@+id/cvContactusEmail"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send URBANARC an email"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/baseline_alternate_email_24"
                    android:drawablePadding="5dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:id="@+id/cvContactusWhatsapp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send URBANARC a chat on WhatsApp"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/baseline_mark_chat_read_24"
                    android:drawablePadding="5dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:id="@+id/cvContactusCall"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call URBANARC Customer care +91 7020472240"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/baseline_call_24"
                    android:layout_marginEnd="60dp"
                    android:layout_marginStart="60dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>